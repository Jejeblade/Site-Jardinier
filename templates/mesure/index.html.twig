{% extends 'base.html.twig' %}

{% block title %}Hello MesureController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% block content %}
<div class="formmid">
    <div id="mesure">
        <form action="{{ ('devis') }}" method="post">
            <select option=""  class="txt-mid" name="type" required>
                <option value="">--Choisir votre type de haie--</option>
                {% for item in mesHaie %}
                    <option value="{{ item.getCode() }}"> {{ item.getNom() }}</option required>
                {% endfor %}
            </select>
            <br><br>
            Longueur :<br><input type="text" class="txt-mid" name="longueur" required><br><br>
            Hauteur :<br><input type="text" class="txt-mid" name="hauteur" required><br><br>
            <button class="btn btn-success">Suite</button>
        </form>
    </div>
</div>
{% endblock %}
{% endblock %}
