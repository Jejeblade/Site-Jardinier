{% extends 'base.html.twig' %}

{% block title %}Hello CreerHaieController!{% endblock %}
{% block body %}
    {% block content %}
    <h2>Consultation des haies</h2>
    <div class="taille-tableau">
<table class="table">
    <thead>
    <tr>
        <th scope="col">Code</td>
        <th scope="col">Nom</td>
        <th scope="col">Prix</td>
            {% if is_granted('ROLE_ADMIN') %}
        <th>Modification</td>
        <th>Suppression</td>
            {% endif %}
    </tr>
</thead>
<tbody>
    {% for item in mesHaie %}
    <tr>
        <td class="bg-success">{{ item.getCode() }}</td>
        <td class="bg-success">{{ item.getNom() }}</td>
        <td class="bg-success">{{ item.getPrix() }}</td>
        {% if is_granted('ROLE_ADMIN') %}
        <td class="bg-success"><a name="code" href="{{ path(('app_modification_haie'), { 'code' : item.getCode() }) }}" class="btn btn-primary">Modificatier</a></td>
        <td class="bg-success"><a name="code" href="{{ path(('app_supprimer_haie'), { 'code' : item.getCode() }) }}" class="btn btn-primary">Supprimer</a></td>
        {% endif %}
    </tr>
{% endfor %}
</tbody>
</table>
</div>
{% if is_granted('ROLE_ADMIN') %}
<a href="{{ path('app_creer_haie') }}" class="btn btn-primary">Cr√©er une haie</a>
{% endif %}
    {% endblock %}
{% endblock %}

